#!/usr/bin/env bash

SCRIPT_DIR=$(dirname "$(readlink -f "$0")")

echo -e '# THIS IS A GENERATED FILE. DO NOT MANUALLY EDIT!\n' > "$SCRIPT_DIR/knot.yaml"
cat "$SCRIPT_DIR/knot.conf.toml" | dasel -i toml -o yaml >> "$SCRIPT_DIR/knot.yaml"

echo "Generated '$SCRIPT_DIR/knot.yaml' from '$SCRIPT_DIR/knot.conf.toml'!"
